{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@": [
                "./src"
            ],
            "@/*": [
                "./src/*"
            ],
            "@components": [
                "./src/components"
            ],
            "@scenes": [
                "./src/scenes"
            ],
            "@hooks": [
                "./src/hooks"
            ],
            "@utils": [
                "./src/utils"
            ],
            "@assets": [
                "./src/assets"
            ],
            "@styles": [
                "./src/styles"
            ],
        },
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2020",
        "jsx": "react",
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}